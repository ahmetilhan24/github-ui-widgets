<section class="bordered-container">
  {{> widget-header title="Repositories" user=repositories.0.owner}}
  <div
    class="repository-list flex--column column--top--center"
  >
    {{#each repositories}}
      <div class="repository-card flex--column column--middle--left">
        <h3 class="repository-card__title">{{name}}</h3>
        {{#if description}}
          <span class="repository-card__description">{{description}}</span>
        {{/if}}
        {{#if topics.length}}
          <ul class="repository-card__topics">
            {{#each topics}}
              <li class="repository-topic">{{this}}</li>
            {{/each}}
          </ul>
        {{/if}}
        <div class="repository-card__info flex--row row--middle--left">
          {{#if language}}
            <div class="info-item">
              <span class="info-item__circle"></span>
              <span class="info-item__text">{{language}}</span>
            </div>
          {{/if}}
          <div class="info-item">
            <span class="info-item__icon info-item__icon--star">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g
                  data-name="Layer 2"
                ><g data-name="star"><rect
                      width="24"
                      height="24"
                      opacity="0"
                      transform="rotate(90 12 12)"
                    ></rect><path
                      d="M17.56 21a1 1 0 0 1-.46-.11L12 18.22l-5.1 2.67a1 1 0 0 1-1.45-1.06l1-5.63-4.12-4a1 1 0 0 1-.25-1 1 1 0 0 1 .81-.68l5.7-.83 2.51-5.13a1 1 0 0 1 1.8 0l2.54 5.12 5.7.83a1 1 0 0 1 .81.68 1 1 0 0 1-.25 1l-4.12 4 1 5.63a1 1 0 0 1-.4 1 1 1 0 0 1-.62.18z"
                    ></path></g></g></svg>
            </span>
            <span class="info-item__text">{{stargazers_count}}</span>
          </div>
          <div class="info-item">
            <span class="info-item__icon">
              <svg xmlns="http://www.w3.org/2000/svg" data-name="Layer 1" viewBox="0 0 24 24"><path d="M17 6.06a3 3 0 0 0-1.15 5.77A2 2 0 0 1 14 13.06h-4a3.91 3.91 0 0 0-2 .56V7.88a3 3 0 1 0-2 0v8.36a3 3 0 1 0 2.16.05A2 2 0 0 1 10 15.06h4a4 4 0 0 0 3.91-3.16A3 3 0 0 0 17 6.06Zm-10-2a1 1 0 1 1-1 1 1 1 0 0 1 1-1Zm0 16a1 1 0 1 1 1-1 1 1 0 0 1-1 1Zm10-10a1 1 0 1 1 1-1 1 1 0 0 1-1 1Z"/></svg>
            </span>
            <span class="info-item__text">{{forks_count}}</span>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>